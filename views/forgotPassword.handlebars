<h2>Forgot Password?</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="POST" action="/users/forgotPassword">
  <input type="text" name="usernameOrEmail" class="form-control" placeholder="Email/Username"><br>
  <button class="btn btn-lg btn-primary" type="submit">Reset Password</button>
</form>
